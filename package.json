{
  "name": "nodejs-ts-starter",
  "version": "1.0.0",
  "description": "A boilerplate to use as a base for building your nodejs projects",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.build.json",
    "start": "node build/index.js",
    "test": "jest",
    "test:unit": "jest --config ./jest.unit.js | pino-pretty",
    "test:int": "jest --config ./jest.int.js | pino-pretty",
    "prepare": "husky install",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josh-kwaku/node-ts-starter.git"
  },
  "keywords": [
    "nodejs",
    "ts",
    "boilerplate",
    "typescript",
    "express"
  ],
  "author": "Joshua Kwaku",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/josh-kwaku/node-ts-starter/issues"
  },
  "homepage": "https://github.com/josh-kwaku/node-ts-starter#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.3",
    "prettier": "3.1.0",
    "supertest": "^6.3.3",
    "testcontainers": "^10.3.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@keycloak/keycloak-admin-client": "^18.0.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pino": "^8.16.2",
    "pino-http": "^8.5.1",
    "sequelize": "^6.35.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
