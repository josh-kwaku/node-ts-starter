{
  "name": "nodejs-ts-starter",
  "version": "1.0.0",
  "description": "A boilerplate to use as a base for building your nodejs projects",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josh-kwaku/node-ts-starter.git"
  },
  "keywords": [
    "nodejs",
    "ts",
    "boilerplate",
    "typescript",
    "express"
  ],
  "author": "Joshua Kwaku",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/josh-kwaku/node-ts-starter/issues"
  },
  "homepage": "https://github.com/josh-kwaku/node-ts-starter#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
